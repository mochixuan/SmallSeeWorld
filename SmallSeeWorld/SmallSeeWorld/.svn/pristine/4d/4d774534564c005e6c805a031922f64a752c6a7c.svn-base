<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/cardbackground"
    android:id="@+id/ll_loading_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/progress_bar_footer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="false"
        android:indeterminateDrawable="?attr/loading_progress" />

    <TextView
        android:textColor="?attr/bottomTextColor"
        android:id="@+id/tv_footer_loading"
        android:layout_marginLeft="2dp"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:text="@string/loading_more_news"
        android:layout_height="wrap_content" />

</LinearLayout>