<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#66666666"
    android:gravity="center_vertical"
    android:id="@+id/ll_viedo_bottom1"
    android:visibility="invisible"
    android:fitsSystemWindows="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_video_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/video_start_player" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/tv_video_starttime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--:--" />

    <SeekBar
        android:id="@+id/seek_bar_video1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxHeight="3.0dp"
        android:minHeight="3.0dp"
        android:progressDrawable="@drawable/seekbar_define_style"
        android:thumb="@drawable/seek_bar_selector" />
    
     <TextView
         android:textColor="#ffffff"
        android:id="@+id/tv_video_sumtime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--:--" />

     <ImageView
         android:id="@+id/iv_video_full1"
         android:layout_marginLeft="4dp"
         android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/video_big_screen" />
     
</LinearLayout>