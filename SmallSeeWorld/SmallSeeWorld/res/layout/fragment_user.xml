<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_user_bg"
    android:background="?attr/cardbackground"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_user_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="?attr/user_bg"
        android:gravity="center_vertical" >

        <com.wx.seeworld.View.CircleImageView
            android:id="@+id/circlr_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user_default"
            circle:border_color="?attr/textcolorname"
            circle:border_width="2dp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circlr_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_rectangle_video"
            android:padding="4dp"
            android:text="@string/user_resiger"
            android:textColor="?attr/textcolorname" />
    </RelativeLayout>

    <include layout="@layout/item_user_select"/>
    
</LinearLayout>