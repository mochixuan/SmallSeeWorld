<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_topic1"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    cardview:cardBackgroundColor="?attr/cardtopicbackground"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="2dp"
    cardview:cardPreventCornerOverlap="true"
    cardview:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_topic_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:text="@string/sign_app_name"
            android:textColor="?attr/cardTitleTextColor"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_topic_captionImg"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_marginTop="36dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_image" />

        <com.wx.seeworld.View.CircleImageView
            android:id="@+id/iv_topic_autherpicture"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/logo"
            cardview:border_color="?attr/bottomTextColor"
            cardview:border_width="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_topic_captionImg" >

            <TextView
                android:id="@+id/tv_topic_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColor="?attr/cardTitleTextColor"
                android:text="床前明月光，疑是地上霜，举头望明月，低头思故乡。"
                android:textSize="16sp" />
            
            <RelativeLayout 
                android:layout_below="@id/tv_topic_caption"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <TextView 
                    android:id="@+id/tv_topic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="?attr/cardTextBottonColor"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:background="@drawable/shape_rectangle_topic1"/>
                
                <TextView 
                    android:id="@+id/tv_discuss_number"
                    android:layout_toRightOf="@id/tv_topic_time"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/cardTextBottonColor"
                    android:layout_centerVertical="true"
                     android:padding="4dp"
                     android:textSize="12sp"
                    android:background="@drawable/shape_rectangle_topic1"
                    android:text="0 提问"
                    />
                
                <TextView 
                    android:id="@+id/tv_attation_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/cardTextBottonColor"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:textSize="12sp"
                     android:padding="4dp"
                    android:background="@drawable/shape_rectangle_topic1"
                    android:text="@string/topic_attention"
                    />
                
            </RelativeLayout>
            
            
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>