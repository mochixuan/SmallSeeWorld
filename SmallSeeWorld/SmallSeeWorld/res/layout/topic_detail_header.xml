<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_topic_head_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/topic_detail_bg"
        android:scaleType="fitXY" />

    <View
        android:background="?attr/topic_details_topbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.wx.seeworld.View.CircleImageView
        android:id="@+id/circlr_topic_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/user_default"
        cardview:border_color="?attr/text_color_write"
        cardview:border_width="1dp" />

    <TextView
        android:id="@+id/tv_topic_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circlr_topic_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="@string/sign_app_name"
        android:textColor="?attr/text_color_write"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_topic_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_topic_userName"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="      床前明月光，疑是地上霜，举头望明月，低头思故乡。"
        android:textColor="?attr/text_color_write"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_topic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_topic1"
                android:padding="4dp"
                android:text="2016-06-10 09:09:09"
                android:textColor="?attr/text_color_write"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_browse_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_topic1"
                android:padding="4dp"
                android:text="@string/topic_attention"
                android:textColor="?attr/text_color_write"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_discuss_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_topic1"
                android:padding="4dp"
                android:text="3 评论"
                android:textColor="?attr/text_color_write"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>