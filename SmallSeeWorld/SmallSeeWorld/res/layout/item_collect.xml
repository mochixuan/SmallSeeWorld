<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/card_view_news"
    android:foreground="?attr/selectableItemBackground"
    cardview:cardBackgroundColor="?attr/cardbackground"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    cardview:cardPreventCornerOverlap="true"
    cardview:cardUseCompatPadding="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_collect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="4dp"
            android:layout_marginLeft="3dp"
            android:maxLines="3"
            android:textColor="?attr/cardTitleTextColor"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/tv_collect_digest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:maxLines="3"
            android:textColor="?attr/cardTextBottonColor"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>