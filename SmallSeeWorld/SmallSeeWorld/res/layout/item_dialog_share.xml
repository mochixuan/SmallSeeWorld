<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardview:cardBackgroundColor="?attr/mainBackgroundColor"
    cardview:cardCornerRadius="8dp"
    cardview:cardElevation="8dp"
    cardview:cardPreventCornerOverlap="true"
    cardview:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:padding="30dp">

        <ImageView
            android:id="@+id/iv_share_wu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_weichat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_share_wu"
            android:layout_centerHorizontal="true"
            android:src="@drawable/share_weichat" />

        <ImageView
            android:id="@+id/iv_weiblog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_share_wu"
            android:layout_toLeftOf="@id/iv_share_wu"
            android:src="@drawable/share_sina" />

        <ImageView
            android:id="@+id/iv_qqzon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_share_wu"
            android:layout_toRightOf="@id/iv_share_wu"
            android:src="@drawable/share_qqzon" />
        
    </RelativeLayout>

</android.support.v7.widget.CardView>