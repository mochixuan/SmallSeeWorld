        <item name="bottomDrawableuser">@drawable/bottom_user_day</item>
        <item name="bottomTextColordefault">#666666</item>
        <item name="cardbackground">#f5f5f5</item>
        <item name="cardTitleTextColor">#5E5E5E</item>
        <item name="cardTextBottonColor">#88666666</item>
        <item name="menu_bg">@drawable/menu_day_bg</item>
        <item name="loading_bg">#f5f5f5</item>
